                <i class="fas fa-bell"></i>
            </button>
            <div class="profile" aria-label="User profile"></div>
        </div>
    </header>
    <!--END HEADER-->

    <!--SECOND PART-->
    <div class="lign">
        <h1 id="books">Books For Sales</h1>
        <div class="button-container">
            <!--SELL BUTTON-->
            <button id="sellbut">Sell</button>
            <div id="overlay">
                <div class="sellpop" id="sellingpop">
                    <div class="sellpop-inner" id="sellingpop-inner">
                        <div class="text">
                            <h3>Enter The necessary Informations</h3>
                        </div>
                        <form id="enterinfos">
                            <div>
                                <input id="name" type="text" name="name" placeholder="Name" required>
                            </div>
                            <br>
                            <div>
                                <input id="title" type="text" name="title" placeholder="Title" required>
                            </div>
                            <br>
                            <div>
                                <input id="author" type="text" name="author" placeholder="Author" required>
                            </div>
                            <br>
                            <div>
                                <select id="category" type="text" name="category" placeholder="category">
                                            <option>Mathematics</option>
                                            <option>Computer science</option>
                                            <option>Physics</option>
                                            <option>Other</option>
                                    </div>
                                    <br>
                                    <div>
                                        <input id="price" type="number" name="price" min="0" step="10" placeholder="Price" required>
                                    </div>
                                    <br>
                                    <div>
                                        <input id="descrip" type="text" name="descrip" placeholder="Description">
                                    </div>
                                    <br>
                                    <div>
                                        <label id="attachim">Attach image: </label>
                                           <label for="imageInput" class="upload-button">
                                               +
                                                </label>
                                         <input type="file" id="imageInput" accept="image/*" style="display: none" />
                                    </div>
                                   <div class="button-container">
                                    <div>
                                        <button type="submit" id="submit">Submit</button>
                                    </div>
                                    <div>
                                        <button id="cancel">Cancel</button>
                                    </div>
                                   </div>
                            </form>
                        </div>
                    </div>
                </div>
            <!--END SELL BUTTON-->
            <!--FILTER BUTTON-->
            <button id="filter">Filter</button>
        </div>
    </div>

    <!-- Filter Form -->
    <div id="filterpop">
        <div class="filter-content">
            <div class="filter-inner">
                <label><input type="checkbox" class="category-filter" value="Mathematics"> Mathematics</label>
                <label><input type="checkbox" class="category-filter" value="Computer Science"> Computer Science</label>
                <label><input type="checkbox" class="category-filter" value="Physics"> Physics</label>
                <label><input type="checkbox" class="category-filter" value="Other"> Other</label>
            </div>
            <div class="buttoncontainerfilter">
                <button id="apply">Apply</button>
                <button id="clearfilter">Clear</button>
            </div>
        </div>
    </div>

    <!-- Books Container with EJS rendering -->
    <div class="books-container">
        <div class="new-container" id="newcont">
            <% if (books && books.length > 0) { %>
                <% books.forEach(book => { %>
                    <div class="flip-card" data-category="<%= book.field %>">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <% if (book.cover) { %>
                                    <img src="<%= book.cover %>" alt="<%= book.title %>">
                                    <% } else { %>
                                        <div class="no-image">No Image</div>
                                        <% } %>
                                            <h3>
                                                <%= book.title %>
                                            </h3>
                                            <!-- If this is meant to be always visible -->
                            </div>
                            <div class="flip-card-back">
                                <p><strong>Price:</strong>
                                    <%= book.price %> DA</p>
                                <p><strong>Author:</strong>
                                    <%= book.author %>
                                </p>
                                <p data-category="<%= book.field %>"><strong>Field:</strong>
                                    <%= book.field %>
                                </p>
                                <p><strong>Posted:</strong>
                                    <% 
                                    const now = new Date();
                                    const postedDate = new Date(book.date_of_publication);
                                    const diffTime = Math.abs(now - postedDate);
                                    const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
                                    
                                    if (diffDays === 0) {
                                        const hours = Math.floor(diffTime / (1000 * 60 * 60));
                                        if (hours === 0) {
                                            const mins = Math.floor(diffTime / (1000 * 60));
                                            if (mins === 0) {
                                                %>Just now
                                        <%
                                            } else {
                                                %>
                                            <%= mins %> minutes ago
                                                <%
                                            }
                                        } else {
                                            %>
                                                    <%= hours %> hours ago
                                                        <%
                                        }
                                    } else if (diffDays === 1) {
                                        %>Yesterday
                                                            <%
                                    } else if (diffDays < 7) {
                                        %>
                                                                <%= diffDays %> days ago
                                                                    <%
                                    } else if (diffDays < 30) {
                                        %>
                                                                        <%= Math.floor(diffDays / 7) %> weeks ago
                                                                            <%
                                    } else {
                                        %>
                                                                                <%= Math.floor(diffDays / 30) %> months ago
                                                                                    <%
                                    }
                                    %>
                                </p>
                                <p><strong>Seller:</strong>
                                    <%= book.owner_name %>
                                </p>
                                <% if (book.description) { %>
                                    <p><strong>Description:</strong>
                                        <%= book.description %>
                                    </p>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="no-books-message">
                                <h3>No books available yet</h3>
                                <p>Be the first to sell a book! Click the "Sell" button above to add your book.</p>
                            </div>
                            <% } %>
        </div>
    </div>
    <footer>
