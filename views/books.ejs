    /*end header */
    /* Footer */
    
    footer {
        background-color: #DC9F3DDC;
        color: black;
        padding: 60px 5% 30px;
        border-radius: 100px;
        font-family: 'Noto Sans', serif;
        margin-top: 300px;
        width: 92%;
    }
    
    .footer-top {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 40px;
        margin-bottom: 50px;
    }
    
    .footer-logo {
