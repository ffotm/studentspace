        width: 180px;
        height: 240px;
        perspective: 1000px;
        margin: 20px;
        position: relative;
        z-index: 1;
    }
    
    .flip-card-inner {
        width: 180px;
        height: 240px;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        position: relative;
        z-index: 999;
    }
    
    .flip-card-front,
