        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 15px;
        z-index: 999;
    }
    
    .flip-card-front {
        background-color: #f8f8f8;
        z-index: 999;
    }
    
    .flip-card-front img {
        width: 100%;
        height: 80%;
        object-fit: cover;
        border-radius: 5px;
        z-index: 999;
